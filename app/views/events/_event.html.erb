<div class="row clearfix">
	<% if event.completed? %>
		<div class="complete">
			<%= link_to "Mark as Complete", complete_bucket_event_path(@bucket, event.id), method: :patch %>
		</div>
		<div class="todo_item">
			<p style="opacity: 0.4;"><strike><%= event.title %></strike></p>
		</div>
		<div class="trash">
			<%= link_to "Delete", bucket_event_path(@bucket, event.id), method: :delete, data: { confirm: "Are you sure?" } %>
		</div>
	<% else %>
		<div class="complete">
			<%= link_to "Mark as Complete", complete_bucket_event_path(@bucket, event.id), method: :patch %>
		</div>
		<div class="todo_item">
			<p><%= event.title %></p>
		</div>
		<div class="trash">
			<%= link_to "Delete", bucket_event_path(@bucket, event.id), method: :delete, data: { confirm: "Are you sure?" } %>
		</div>
	<% end %>
</div>




